<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LoginButtonTheme">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ProfileTextTheme">
        <item name="android:padding">5dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center|start</item>
        <item name="android:background">@null</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:progressTint">@color/star_color</item>
    </style>

    <style name="RatingBarStyle.Small" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:progressTint">@color/star_color</item>
    </style>

    <style name="MenuButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center|start</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:drawableEnd">@drawable/arrow_right_black</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="DefaultButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
    </style>

</resources>
